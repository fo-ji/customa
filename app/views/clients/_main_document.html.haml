.main-document

  .main-document__header
    .main-document__header--title
      .title__name 保存ファイル一覧

  .main-document__container
    .main-document__container--left
      .left__title
        .left__title--name 見積書
      .left__box
        %ul.quotation__list
          - @quotations.each do |quotation|
            = link_to "#" do
              .quotation__list--all
                %li.quotation__list--name
                  = quotation.name
                %li.quotation__list--date 
                  = "作成日：#{quotation.created_at.strftime('%Y/%m/%d')}"

    .main-document__container--center
      .center__title
        .center__title--name 議事録
      .center__box
        %ul.minutes__list
          - @minutes.each do |minute|
            = link_to "#" do
              .minutes__list--all
                %li.minutes__list--name
                  = minute.name
                %li.minutes__list--date 
                  = "作成日：#{minute.created_at.strftime('%Y/%m/%d')}"

    .main-document__container--right
      .right__title
        .right__title--name その他
      .right__box
        %ul.other__list
          - @others.each do |other|
            = link_to "#" do
              .other__list--all
                %li.other__list--name
                  = other.name
                %li.other__list--date 
                  = "作成日：#{other.created_at.strftime('%Y/%m/%d')}"


  .main-document__footer
    .main-document__footer--upload
      = link_to "見積書アップロード", new_quotation_path, class: "upload"
      = link_to "議事録アップロード", new_minute_path, class: "upload"
      = link_to "その他アップロード", new_other_path, class: "upload"
